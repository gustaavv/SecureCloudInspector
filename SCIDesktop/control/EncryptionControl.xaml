<UserControl x:Class="SCIDesktop.control.EncryptionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBlock HorizontalAlignment="Left" FontSize="30" Margin="10,5,10,10">Encryption</TextBlock>

        <StackPanel Orientation="Horizontal" Margin="10,0,10, 5">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="0,0,5,0"></Setter>
                </Style>
            </StackPanel.Resources>
            <Button Name="RefreshButton" ToolTip="Refresh List">
                <svgc:SvgViewbox
                    Source="pack://application:,,,/asset/icon/arrow-rotate-right-solid.svg"
                    Width="16" Height="16" Stretch="Uniform" />
            </Button>
            <Button Name="NewButton" ToolTip="New DB">
                <svgc:SvgViewbox
                    Source="pack://application:,,,/asset/icon/plus-solid.svg"
                    Width="16" Height="16" Stretch="Uniform" />
            </Button>
            <Button Name="ExportButton" ToolTip="Export DB">
                <svgc:SvgViewbox
                    Source="pack://application:,,,/asset/icon/upload-solid.svg"
                    Width="16" Height="16" Stretch="Uniform" />
            </Button>
        </StackPanel>

        <ListView Margin="10, 0" Name="DbList">
            <ListView.Resources>
                <Style TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Source Folder" Width="250" DisplayMemberBinding="{Binding SourceFolder}" />
                    <GridViewColumn Header="Encrypted Folder" Width="250"
                                    DisplayMemberBinding="{Binding EncryptedFolder}" />
                    <GridViewColumn Header="Created" Width="100" DisplayMemberBinding="{Binding CreatedAt}" />
                    <GridViewColumn Header="Updated" Width="100" DisplayMemberBinding="{Binding UpdatedAt}" />

                    <GridViewColumn Header="Actions" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel.Resources>
                                        <Style TargetType="Button">
                                            <Setter Property="Margin" Value="0,0,5,0"></Setter>
                                        </Style>
                                    </StackPanel.Resources>
                                    <Button Name="InfoButton" ToolTip="Detailed Info" Tag="{Binding Name}">
                                        <svgc:SvgViewbox
                                            Source="pack://application:,,,/asset/icon/circle-info-solid.svg"
                                            Width="16" Height="16" Stretch="Uniform" />
                                    </Button>

                                    <Button Name="SearchButton" ToolTip="Search DB" Tag="{Binding Name}">
                                        <svgc:SvgViewbox
                                            Source="pack://application:,,,/asset/icon/magnifying-glass-solid.svg"
                                            Width="16" Height="16" Stretch="Uniform" />
                                    </Button>

                                    <Button Name="RenameButton" ToolTip="Rename DB" Tag="{Binding Name}">
                                        <svgc:SvgViewbox
                                            Source="pack://application:,,,/asset/icon/pen-to-square-solid.svg"
                                            Width="16" Height="16" Stretch="Uniform" />
                                    </Button>
                                    <Button Name="DeleteButton" ToolTip="Delete DB" Tag="{Binding Name}">
                                        <svgc:SvgViewbox
                                            Source="pack://application:,,,/asset/icon/trash-can-solid.svg"
                                            Width="16" Height="16" Stretch="Uniform" />
                                    </Button>


                                </StackPanel>

                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

    </StackPanel>
</UserControl>