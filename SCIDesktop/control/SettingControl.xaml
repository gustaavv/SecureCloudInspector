<UserControl x:Class="SCIDesktop.control.SettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="1200">
    <Grid Margin="20">
        <Grid.Resources>
            <Style TargetType="iconPacks:PackIconFontAwesome">
                <Setter Property="Width" Value="16" />
                <Setter Property="Height" Value="16" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" HorizontalAlignment="Left" FontSize="30" Margin="0,0,0,10">Settings</TextBlock>

        <GroupBox Grid.Row="1" Margin="0,10" Header="Core Config"
                  mah:ControlsHelper.ContentCharacterCasing="Normal">
            <StackPanel>
                <Grid Margin="5,5,5,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0">Path to rar.exe</TextBlock>
                    <Grid Grid.Column="1" Margin="20,0,0,0">
                        <Rectangle Fill="Gray" Opacity="0.3" />
                        <TextBox Name="RarPathTextBox" Text="{Binding Path=RarPath, Mode=OneWay}" IsReadOnly="True"
                                 Background="Transparent" />
                    </Grid>

                    <Button ToolTip="Choose file" Grid.Column="2" x:Name="ChooseRarButton" Margin="5,0,0,0"
                            Click="ChooseRarButton_OnClick">
                        <iconPacks:PackIconFontAwesome Kind="FileSolid" />
                    </Button>
                </Grid>

                <Grid Margin="5,5,5,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0">Path to DB Folder</TextBlock>
                    <Grid Grid.Column="1" Margin="20,0,0,0">
                        <Rectangle Fill="Gray" Opacity="0.3" />
                        <TextBox Name="DbFolderTextBox"
                                 Text="{Binding Path=DbFolderPath, Mode=OneWay}"
                                 IsReadOnly="True" Background="Transparent" />
                    </Grid>

                    <Button ToolTip="Choose Folder" Grid.Column="2" x:Name="ChooseDbFolderButton" Margin="5,0,0,0"
                            Click="ChooseDbFolderButton_OnClick">
                        <iconPacks:PackIconFontAwesome Kind="FolderSolid" />
                    </Button>
                </Grid>
            </StackPanel>
        </GroupBox>

        <Button Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                mah:ControlsHelper.ContentCharacterCasing="Normal"
                Padding="5,5" Margin="0,10" Height="40"
                Click="SaveButton_OnClick">
            Save Settings
        </Button>

    </Grid>
</UserControl>