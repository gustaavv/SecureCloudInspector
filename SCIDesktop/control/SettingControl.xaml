<UserControl x:Class="SCIDesktop.control.SettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="1200">
    <StackPanel>
        <TextBlock HorizontalAlignment="Left" FontSize="30" Margin="10,5,10,10">Settings</TextBlock>

        <GroupBox Margin="10,5,10,10" Header="Core Config">
            <StackPanel>
                <Grid Margin="5,5,5,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0">Path to rar.exe</TextBlock>
                    <Grid Grid.Column="1" Margin="20,0,0,0">
                        <Rectangle Fill="Gray" Opacity="0.3" />
                        <TextBox Name="RarPathTextBox" Text="{Binding Path=RarPath, Mode=OneWay}" IsReadOnly="True"
                                 Background="Transparent" />
                    </Grid>

                    <Button ToolTip="Choose file" Grid.Column="2" x:Name="ChooseRarButton" Margin="5,0,0,0"
                            Click="ChooseRarButton_OnClick">
                        <svgc:SvgViewbox Source="pack://application:,,,/asset/icon/file-solid.svg"
                                         Width="16" Height="16" Stretch="Uniform" />
                    </Button>
                </Grid>

                <Grid Margin="5,5,5,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0">Path to DB Folder</TextBlock>
                    <Grid Grid.Column="1" Margin="20,0,0,0">
                        <Rectangle Fill="Gray" Opacity="0.3" />
                        <TextBox Name="DbFolderTextBox"
                            Text="{Binding Path=DbFolderPath, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}"
                            IsReadOnly="True" Background="Transparent" />
                    </Grid>

                    <Button ToolTip="Choose Folder" Grid.Column="2" x:Name="ChooseDbFolderButton" Margin="5,0,0,0"
                            Click="ChooseDbFolderButton_OnClick">
                        <svgc:SvgViewbox Source="pack://application:,,,/asset/icon/folder-solid.svg"
                                         Width="16" Height="16" Stretch="Uniform" />
                    </Button>
                </Grid>
            </StackPanel>
        </GroupBox>

        <Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Padding="5,5" Margin="0,5, 10,10" Height="40"
                Click="SaveButton_OnClick">
            Save Settings
        </Button>

    </StackPanel>
</UserControl>