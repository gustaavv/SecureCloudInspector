<Application x:Class="SCIDesktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SCIDesktop"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             Startup="App_OnStartup">
    <Application.Resources>
        <!-- global font size -->
        <system:Double x:Key="BaseFontSize">20</system:Double>

        <Style TargetType="{x:Type Control}" x:Key="BaseStyle">
            <Setter Property="FontSize" Value="{StaticResource BaseFontSize}" />
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource BaseStyle}" />
        <Style TargetType="TextBox" BasedOn="{StaticResource BaseStyle}" />
        <Style TargetType="ListView" BasedOn="{StaticResource BaseStyle}" />

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="{StaticResource BaseFontSize}"></Setter>
        </Style>

        <!-- others -->
        <Style TargetType="svgc:SvgViewbox">
            <Setter Property="Stretch" Value="Uniform" />
        </Style>

    </Application.Resources>
</Application>