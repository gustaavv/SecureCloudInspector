<Window x:Class="SCIDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCIDesktop"
        mc:Ignorable="d"
        Title="SCI-Desktop"
        Height="750" Width="1200" MinWidth="800" MinHeight="450" WindowStartupLocation="CenterScreen">
    <DockPanel>

        <TabControl DockPanel.Dock="Left" TabStripPlacement="Left">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Height" Value="40" />
                </Style>
            </TabControl.Resources>
            <TabItem Header="Encryption"></TabItem>
            <TabItem Header="Decryption"></TabItem>
            <TabItem Header="Setting"></TabItem>
        </TabControl>

        <ContentControl DockPanel.Dock="Right"></ContentControl>
    </DockPanel>
</Window>