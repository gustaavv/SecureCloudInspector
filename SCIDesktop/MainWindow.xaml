<Window x:Class="SCIDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SCI-Desktop"
        Height="720" Width="1280" MinHeight="720" MinWidth="1280"
        WindowStartupLocation="CenterScreen">
    <DockPanel>

        <TabControl DockPanel.Dock="Left" TabStripPlacement="Left">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Height" Value="40" />
                </Style>
            </TabControl.Resources>
            <TabItem Header="_Encryption" Name="EncTab" />
            <TabItem Header="_Decryption" Name="DecTab" />
            <TabItem Header="_Setting" Name="SetTab" />
            <TabItem Header="_About" Name="AboutTab"></TabItem>
        </TabControl>

    </DockPanel>
</Window>